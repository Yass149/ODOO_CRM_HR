<odoo>
    <record id="view_employee_checkin_dashboard_tree" model="ir.ui.view">
        <field name="name">employee.checkin.dashboard.tree</field>
        <field name="model">employee.checkin.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Employee Check-In Dashboard">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="check_in_status"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_checkin_dashboard_form" model="ir.ui.view">
        <field name="name">employee.checkin.dashboard.form</field>
        <field name="model">employee.checkin.dashboard</field>
        <field name="arch" type="xml">
            <form string="Employee Check-In Dashboard">
                <group>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="check_in_status"/>
                </group>
                <footer>
                    <button name="mark_as_completed" string="Mark as Completed" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
