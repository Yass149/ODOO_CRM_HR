<odoo>
    <!-- Define the action for Training -->
    <record id="action_hr_training" model="ir.actions.act_window">
        <field name="name">Trainings</field>
        <field name="res_model">hr.training</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define the action for Training Session -->
    <record id="action_hr_training_session" model="ir.actions.act_window">
        <field name="name">Training Sessions</field>
        <field name="res_model">hr.training.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Define the root menu item for Training -->
    <menuitem id="menu_hr_training_root" name="Training"/>

    <!-- Define submenus under Training -->
    <menuitem id="menu_hr_training" name="Trainings" parent="menu_hr_training_root" action="action_hr_training"/>
    <menuitem id="menu_hr_training_session" name="Training Sessions" parent="menu_hr_training_root" action="action_hr_training_session"/>
</odoo>
